@model List<TP3.Models.Person>

@{
    ViewData["Title"] = "All persons";
}

<div>
    <h1>All persons</h1>
    <h3>
        <a asp-action="search">Search</a>
    </h3>
</div>

<div>
    @{
        foreach (Person p in Model){
             <div class="row">
        <div class="col-sm-2">
            id
        </div>
        <div class="col-sm-10">
            @p.id
        </div>
        <div class="col-sm-2">
            first_name
        </div>
        <div class="col-sm-10">
          @p.first_name
        </div>
        <div class="col-sm-2">
           last_name
        </div>
        <div class="col-sm-10">
            @p.last_name
        </div>
        <div class="col-sm-2">
            email
        </div>
        <div class="col-sm-10">
                    @p.email
        </div>
        <div class="col-sm-2">
            image
        </div>
        <div class="col-sm-10">
                    @p.image
        </div>
        <div class="col-sm-2">
           country
        </div>
        <div class="col-sm-10">
            @p.country
        </div>
    </div>
        }
    }
   
</div>