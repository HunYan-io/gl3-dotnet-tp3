@{
    @model TP3.Models.Person
}
@{
    ViewData["Title"] = "Person";
}



@{
    TP3.Models.Person p = Model;
    if (Model == null)
    {

<div >
        <h1>
            Not found
        </h1>
        <h3>
                <a asp-action="all">All Persons</a>
        </h3>
 </div>
    }
    else
    {
        <div>

            <h1>Persons @Model.id</h1>
            <h3>
                <a asp-action="all">All</a>
            </h3>
        </div>
        <div class="row">
        <div class="col-sm-2">
            id
        </div>
        <div class="col-sm-10">
            @p.id
        </div>
        <div class="col-sm-2">
            first_name
        </div>
        <div class="col-sm-10">
          @p.first_name
        </div>
        <div class="col-sm-2">
           last_name
        </div>
        <div class="col-sm-10">
            @p.last_name
        </div>
        <div class="col-sm-2">
            email
        </div>
        <div class="col-sm-10">
                    @p.email
        </div>
        <div class="col-sm-2">
            image
        </div>
        <div class="col-sm-10">
                    @p.image
        </div>
        <div class="col-sm-2">
           country
        </div>
        <div class="col-sm-10">
            @p.country
        </div>
    </div>
    
    }
}
